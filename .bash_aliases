#echo "loading .bash_aliases"

alias grep='grep --color=auto'
alias ls='ls --color=always --group-directories-first'
alias ll='ls -lA'
alias lx='ls -lX'

alias aledit='nano ~/.bash_aliases'
alias valedit='vim ~/.bash_aliases'
alias galedit='gedit ~/.bash_aliases'
alias alrl='source ~/.bash_aliases'
alias alrc='source ~/.bashrc'

alias ea='vim ~/.bashrc'
alias sa='source ~/.bashrc'
alias fasd-init='eval "$(fasd --init auto)"'
alias nvm-init='. "$NVM_DIR/nvm.sh"'

alias exe='chmod 755'
alias go='nautilus'
alias open='nautilus .'
alias view='open'
alias cls='clear'
alias clc='clear'
alias up='cd ..'
alias u='up'

alias chcc='cd /mnt/e/d/ChakraCore'
