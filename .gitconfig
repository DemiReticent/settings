[user]
	name = Doug Ilijev
	email = doug.ilijev@gmail.com
[alias]
	st = status
	ci = commit
	cm = commit -m
	ca = commit -am
	co = checkout
	br = branch
	ss = status -s
	dc = diff --cached
	undo = reset --hard HEAD
	glog = log --graph
	lg = log --pretty=format:\"[%h]  %ad  (%an <%ae>)%n    %s%n\"
	gl = log --graph --pretty=format:\"[%h]  %ad  (%an <%ae>)%n    %s%n\"
	cfg = config --global
	cfl = config -l
	cfgl = config --global -l
[pretty]
	compact = [%h]  %ad  (%an <%ae>)%n    %s%n
[format]
	pretty = medium
[push]
	default = simple
[merge]
	tool = kdiff3
